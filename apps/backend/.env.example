# Application Environment
# Use 'production' in production environment
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=strategy

# JWT Configuration
# IMPORTANT: Generate a strong secret for production
# Generate with: openssl rand -base64 32
# In production, this is REQUIRED and will throw an error if missing
JWT_SECRET=your-secret-key-change-in-production

# Redis Configuration (for rate limiting)
# IMPORTANT: Use a strong password in production
# In production, REDIS_PASSWORD is REQUIRED and will throw an error if missing
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis

# Frontend URL (for CORS and email links)
# Used for CORS configuration and password reset email links
FRONTEND_URL=http://localhost:5173

# Email Configuration (optional - for production email providers)
# Used as the "from" address in emails
EMAIL_FROM=noreply@strategy.app

# Logging Configuration
# Options: error, warn, info, debug, verbose
# Default: 'info' in production, 'debug' in development
LOG_LEVEL=debug


# Enable/disable Binance API (default: true)
USE_BINANCE_API=true

# Supported trading pairs (comma-separated)
# Format: BTC/USD,ETH/USD,BNB/USD
# Note: Binance uses USDT, but we normalize to USD
SUPPORTED_SYMBOLS=BTC/USD,ETH/USD,BNB/USD

# Market data sync cron (default: midnight daily)
MARKET_DATA_SYNC_CRON=0 0 * * *

# Auto-prepopulate on startup (default: true)
MARKET_DATA_PREPOPULATE=true

# Batch size for database inserts (default: 1000)
MARKET_DATA_BATCH_SIZE=1000